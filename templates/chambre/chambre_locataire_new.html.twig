{% include '/layouts/app.html.twig' %}
{% block body %}
<div class="main-panel">
    <div class="content-wrapper bg-white">
       
        <div class="row >
        
                 <h5 class="modal-title" id="chambreLocataireModalLabel">Formulaire de Chambre Locataire</h5>
                    </div>
                    <div class="modal-body">
                        {{ form_start(form) }}
                        <div class="form-group row">
                            {{ form_label(form.chambre, 'Chambre', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                            <div class="col-sm-9">
                                {{ form_widget(form.chambre, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            {{ form_label(form.locataire, 'Locataire', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                            <div class="col-sm-9">
                                {{ form_widget(form.locataire, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            {{ form_label(form.anneeAcademique, 'Année Académique', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                            <div class="col-sm-9">
                                {{ form_widget(form.anneeAcademique, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            {{ form_label(form.dureeOccupation, 'Durée d\'Occupation', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                            <div class="col-sm-9">
                                {{ form_widget(form.dureeOccupation, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
