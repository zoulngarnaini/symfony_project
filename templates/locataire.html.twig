{% include '/layouts/app.html.twig' %}
     <!-- partial -->
<div class="main-panel">
<div class="content-wrapper">
<div class="col-lg-12 grid-margin stretch-card">
<div class="card">

  <div class="card-body">
    {{message}}
    
    <p class="card-description">
      {{message}}
    </p>
    <div class="table-responsive">
      <p class="card-description">
        <a class='btn btn-danger' href="{{path('app_new_loc')}}">Ajouter un nouveau locataire  </a>
      </p>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>
              Nom et Prenom
            </th>
            <th>
              Chambre
            </th>
            <th>
              Adresse
            </th>
            <th>
              Telephone
            </th>
            <th>
              Date arrivee
            </th>
            <th>
              Annee location
            </th>
          </tr>
        </thead>
        <tbody>
          {% for locataire in locataires %}
          <tr>
            <td class="py-1">
              {{ locataire.nom }}
              {{ locataire.prenom }}
            </td>
        
            <td>
              {{ locataire.genre }}
            </td>
            <td>
              {{ locataire.telephone }}
            </td>
          
            <td>
              {{ locataire.filiere }}
            
              {{ locataire.niveau }}
            </td>
            <td>
              {{ locataire.adresse }}
            </td>
            <td>
              
            </td>
            <td>
              
            </td>
            <td>
              
              <td>
              <div class="d-flex align-items-center">
                <a type="button" class="btn btn-success btn-sm btn-icon-text mr-1" href="{{ path('app_det_loc', {'id': locataire.id}) }}">
                  Plus
                  <i class="typcn typcn-edit btn-icon-append"></i>                          
                </a>
                <a type="button" class="btn btn-success btn-sm btn-icon-text mr-1" href="{{ path('locataire_edit', {'id': locataire.id}) }}">
                  edit
                  <i class="typcn typcn-edit btn-icon-append"></i>                          
                </a> 
              </div>
          
              <div class="d-flex align-items-center mt-2">
                <form method="post" action="{{ path('locataire_delete', {'id': locataire.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce locataire ?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ locataire.id) }}" >
                  <i class="typcn typcn-delete-outline btn-icon-append"></i>
                  <button class="btn btn-danger btn-sm btn-icon-text">Supp</button>
               </form>
              
              </div>
            </td>
          
          </td>
          </tr>
          {% else %}
          <tr>
            <td colspan="7">Aucune locataire trouvée</td>
          </tr>
          {% endfor %}
   
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>

  