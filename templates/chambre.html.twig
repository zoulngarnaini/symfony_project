{% include '/layouts/app.html.twig' %}
<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <h4>{{ message }}</h4>
          <div class="table-responsive pt-3">
            <table class="table table-striped project-orders-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Nom</th>
                  <th>Etat</th>
                  <th>Statut</th>
                  <th>Localisation</th>
                  <th>Position</th>
                  <th>Batiment</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for chambre in chambres %}
                <tr>
                  <td>#{{ chambre.id }}</td>
                  <td>{{ chambre.nom }}</td>
                  <td>{{ chambre.etat }}</td>
                  <td>{{ chambre.statut }}</td>
                  <td>{{ chambre.localisation }}</td>
                  <td>{{ chambre.position }}</td>
                  <td> {{ chambre.batiment.nom }}</td>
                  <td>
                    <td>
                      <div class="d-flex align-items-center">
                        <a type="button" class="btn btn-success btn-sm btn-icon-text mr-1" href="{{ path('app_det_chambre', {'id': chambre.id}) }}">
                          Plus
                          <i class="typcn typcn-edit btn-icon-append"></i>                          
                        </a>
                        <button type="button" class="btn btn-success btn-sm btn-icon-text mr-1">
                          Modif
                          <i class="typcn typcn-edit btn-icon-append"></i>                          
                        </button> 
                      </div>
                  
                      <div class="d-flex align-items-center mt-2">
                        <button type="button" class="btn btn-success btn-sm btn-icon-text mr-1">
                          Attrib
                          <i class="typcn typcn-edit btn-icon-append"></i>                          
                        </button> 
                        <button type="button" class="btn btn-danger btn-sm btn-icon-text">
                          Supp
                          <i class="typcn typcn-delete-outline btn-icon-append"></i>                          
                        </button>
                      </div>
                    </td>
                  
                  </td>
                </tr>
                {% else %}
                <tr>
                  <td colspan="7">Aucune chambre trouv√©e</td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
